<header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="/"><span>旅ブラ_GO</span></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
        <% if user_signed_in? %>
          <li>
            <%= link_to  show_mypage_user_path(current_user),class: 'nav-link text-light' do %>
              <i class="fas fa-home"></i> マイページ
            <% end %>
          </li>
          <li>
            <%=  link_to  new_post_path,class: 'nav-link text-light' do %>
              <i class="fas fa-users"></i> 投稿
            <% end %>
          </li>
          <li>
            <%=  link_to posts_path,class: 'nav-link text-light' do %>
              <i class="fas fa-book-open"></i> 投稿一覧
            <% end %>
          </li>
          <li>
            <%= link_to destroy_user_session_path, method: :delete,class: 'nav-link text-light' do %>
              <i class="fas fa-sign-out-alt"></i> ログアウト
            <% end %>
          </li>
          <li class="nav-item">
            <%= form_with(url: posts_path, method: :get, local: true, class: 'form-inline my-2 my-lg-0') do %>
              <%= text_field_tag :q, params[:q], class: 'form-control mr-sm-2', placeholder: 'キーワード検索' %>
              <%= submit_tag '検索', class: 'btn btn-outline-light my-2 my-sm-0' %>
            <% end %>
          </li>
          <li class="nav-item">
            <%= form_with(url: posts_path, method: :get, local: true, class: 'form-inline') do %>
              <%= text_field_tag :tag, params[:tag], class: 'form-control mr-sm-2', placeholder: 'タグ検索' %>
              <%= submit_tag '検索', class: 'btn btn-outline-light my-2 my-sm-0' %>
            <% end %>
          </li>
        <% else %>
          <li>
            <%= link_to root_path,class: 'nav-link text-light' do %>
              <i class="fas fa-home"></i> Top
            <% end %>
          </li>
          <li>
            <%= link_to homes_about_path,class: 'nav-link text-light' do %>
              <i class="fas fa-link"></i> About
            <% end %>
          </li>
          <li>
            <%= link_to new_user_registration_path,class: 'nav-link text-light' do %>
              <i class="fas fa-user-plus"></i> 新規登録
            <% end %>
          </li>
          <li>
            <%= link_to new_user_session_path ,class: 'nav-link text-light' do %>
              <i class="fas fa-sign-in-alt"></i> ログイン
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to guest_login_path, method: :post, class: 'btn btn-secondary nav-link' do %>
              <i class="fas fa-sign-in-alt"></i> ゲストログイン
            <% end %>
          </li>
        <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>